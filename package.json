{
  "name": "beta-pidtune",
  "version": "0.1.0",
  "description": "Beta PIDTune - FPV Drone PID Autotuning Application",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:main": "tsc --project tsconfig.main.json",
    "build:renderer": "vite build",
    "rebuild": "electron-rebuild -f -w serialport",
    "start": "electron .",
    "preview": "vite preview"
  },
  "keywords": [
    "fpv",
    "drone",
    "pid",
    "tuning",
    "autotuning",
    "flight-controller",
    "electron"
  ],
  "author": "eddycek",
  "license": "MIT",
  "dependencies": {
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "serialport": "^12.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.28.2",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.eddycek.beta-pidtune",
    "productName": "Beta PIDTune",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Development"
    }
  }
}
