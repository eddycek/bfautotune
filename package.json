{
  "name": "bfautotune",
  "version": "0.1.0",
  "description": "Betaflight PID AutoTune - FPV Drone PID Autotuning Application",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "vite",
    "dev:demo": "DEMO_MODE=true vite",
    "build": "tsc && vite build && electron-builder",
    "build:main": "tsc --project tsconfig.main.json",
    "build:renderer": "vite build",
    "rebuild": "electron-rebuild -f -w serialport",
    "start": "electron .",
    "preview": "vite preview",
    "build:e2e": "vite build",
    "test:e2e": "vite build && npx playwright test",
    "test:e2e:ui": "vite build && npx playwright test --ui",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "lint:check": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "prepare": "husky"
  },
  "keywords": [
    "fpv",
    "drone",
    "pid",
    "tuning",
    "autotuning",
    "flight-controller",
    "electron"
  ],
  "author": "eddycek",
  "license": "MIT",
  "dependencies": {
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0",
    "fft.js": "^4.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^3.7.0",
    "serialport": "^12.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.58.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^4.0.18",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.28.2",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^4.0.18"
  },
  "build": {
    "appId": "com.eddycek.bfautotune",
    "productName": "Betaflight PID AutoTune",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Development"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "vitest related --run"
    ],
    "src/**/*.css": [
      "prettier --write"
    ]
  }
}
